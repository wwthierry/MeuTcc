{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/(.*\\.(ico|css|js|png|jpg|jpeg|gif|svg))$",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ]
  }